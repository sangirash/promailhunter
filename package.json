{
  "name": "promailhunter",
  "version": "2.0.0",
  "description": "Advanced email finder & verifier with Python email-validator integration, corporate intelligence, and enhanced validation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test_email_generator.js",
    "test-verification": "node test_email_verification.js",
    "test-enhanced": "node test_enhanced_verification.js",
    "test-corporate": "node test_corporate_only.js",
    "setup-python": "./setup_python_validator.sh",
    "test-ukg": "node test_ukg_verification.js",
    "postinstall": "echo 'ðŸš€ ProMailHunter v2.0.0 installed! Run npm run setup-python to enable enhanced validation.'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dompurify": "^3.0.5",
    "jsdom": "^23.0.1",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "nodemailer": "^6.9.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "email",
    "verification",
    "validation", 
    "email-finder",
    "smtp",
    "dns",
    "corporate-emails",
    "python-integration",
    "email-generator",
    "deliverability",
    "pattern-matching",
    "international-emails",
    "unicode-support",
    "rfc-compliant"
  ],
  "author": "ProMailHunter Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/promailhunter.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/promailhunter/issues"
  },
  "homepage": "https://github.com/yourusername/promailhunter#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "optionalDependencies": {
    "python3": "*"
  },
  "config": {
    "python_requirements": [
      "email-validator>=2.0.0"
    ]
  },
  "features": {
    "enhanced_validation": {
      "python_email_validator": true,
      "international_domains": true,
      "unicode_support": true,
      "corporate_intelligence": true,
      "pattern_matching": true,
      "domain_validation": true,
      "smtp_verification": true,
      "batch_processing": true
    }
  }
}